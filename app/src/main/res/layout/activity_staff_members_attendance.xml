<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.StaffMembersAttendance"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/railwaywebfont"
            android:layout_gravity="left"
            android:background="@drawable/mcv_action_previous"
            android:id="@+id/prev_att_mnth" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="1st June 2019"
            android:textAlignment="center"
            android:fontFamily="@font/railwaywebfont"
            android:layout_weight="0.8"
            android:id="@+id/att_mnth"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:fontFamily="@font/railwaywebfont"
            android:background="@drawable/mcv_action_next"
            android:gravity="right"
            android:id="@+id/next_att_mnth"/>

    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:background="@drawable/tv_border"
        >

        <TableRow>
            <TextView
                android:text="StaffId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:fontFamily="@font/railwaywebfont"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:background="@drawable/tv_border"
                />
            <TextView
                android:text="Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_border"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:textAllCaps="true"
                android:fontFamily="@font/railwaywebfont"
                android:textAlignment="center"
                android:layout_weight="1"/>
            <TextView
                android:text="Mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_border"
                android:fontFamily="@font/railwaywebfont"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/railwaywebfont"
                android:background="@drawable/tv_border"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="Present" />
            <TextView
                android:text="Absent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/railwaywebfont"
                android:background="@drawable/tv_border"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                android:textAlignment="center"
                android:layout_weight="1"/>
        </TableRow>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rcyview_attendance">

        </android.support.v7.widget.RecyclerView>
    </TableLayout>

    <TextView
        android:id="@+id/tv_nodata_message_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/error_message1"
        android:fontFamily="@font/railwaywebfont"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_error_message_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:fontFamily="@font/railwaywebfont"
            android:text="@string/error_message"
            android:textSize="20sp"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/pb_loading_indicator"
            android:layout_height="42dp"
            android:layout_width="42dp"
            android:fontFamily="@font/railwaywebfont"
            android:layout_gravity="center"
            android:visibility="invisible" />

    </LinearLayout>


</LinearLayout>