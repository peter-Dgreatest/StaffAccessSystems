<?xml version="1.0" encoding="utf-8"?>


<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/staff_div"
    android:background="@drawable/tv_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="1"
            android:id="@+id/txt_att_staff_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/railwaywebfont"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            android:layout_weight="0.5"
            android:textAlignment="center"
            />
        <TextView
            android:text="Enenche Peter"
            android:layout_width="0dp"
            android:id="@+id/txt_att_staff_name"
            android:fontFamily="@font/railwaywebfont"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:text="08168393619"
            android:layout_width="0dp"
            android:fontFamily="@font/railwaywebfont"
            android:id="@+id/txt_att_staff_phone"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_att_staff_present"
            android:fontFamily="@font/railwaywebfont"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            android:textAlignment="center"
            android:layout_weight="1"
            android:text="10 (70%)" />
        <TextView
            android:text="10 (7%)"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_att_staff_absent"
            android:fontFamily="@font/railwaywebfont"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            android:layout_weight="1"/>
    </TableRow>
