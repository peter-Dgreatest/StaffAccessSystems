<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.itcrusaders.staffaccesssystems">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.AppBarOverlay">
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".VisitorLogin"
            android:label="@string/title_activity_visitor_login"
            android:parentActivityName=".SplashScreen"
            android:theme="@style/AppTheme.NoActionBar" />


        <activity
            android:name=".Admin.VisitorDashboard"
            android:parentActivityName=".MaterialDesignCalender.VisitorCalendarActivity" />
        <activity
            android:name=".MaterialDesignCalender.SchVisitorCalendarActivity"
            android:parentActivityName=".MaterialDesignCalender.SchVisitorCalendarActivity" />
        <activity
            android:name=".StaffLogin"
            android:label="Staff Login Status">
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>

        </activity>

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
            <!-- Set custom default icon. This is used when no icon is set for incoming notification messages.
                    See README(https://goo.gl/l4GJaQ) for more. -->
            <meta-data
                android:name="com.google.firebase.messaging.default_notification_icon"
                android:resource="@android:drawable/ic_notification_overlay" />
            <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
                 notification message. See README(https://goo.gl/6BKBk7) for more. -->
            <meta-data
                android:name="com.google.firebase.messaging.default_notification_color"
                android:resource="@color/colorAccent" />
        </service>

        <activity
            android:name=".StaffDashboard"
            android:theme="@style/AppTheme.CustomTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StaffLogin" />
        </activity>
        <activity android:name=".Admin.StaffMembersAttendance" />
        <activity android:name=".MaterialDesignCalender.BasicActivity" />
        <activity android:name=".MaterialDesignCalender.VisitorCalendarActivity"
            android:parentActivityName=".Admin.Dashboard"/>
        <activity
            android:name=".SMSVerificationActivity"
            android:parentActivityName=".SplashScreen"
            android:theme="@style/AppTheme.CustomTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StaffDashboard" />
        </activity>
        <activity
            android:name=".Admin.Dashboard"
            android:parentActivityName=".SplashScreen"
            android:screenOrientation="landscape"/>
        <activity android:name=".Admin.StaffInfoEdit" />
        <activity
            android:name=".Admin.EditStaffInfo"
            android:parentActivityName=".Admin.StaffInfoEdit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Admin.StaffInfoEdit" />
        </activity>
        <activity
            android:name=".Admin.StaffAddInfo"
            android:parentActivityName=".Admin.StaffInfoEdit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Admin.StaffInfoEdit" />
        </activity>
        <activity android:name=".Admin.StaffReports" />
        <activity
            android:name=".MainTabbedActivity"
            android:label="@string/title_activity_main_tabbed"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AdminLogin"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Get_Visitors_Activity_Appoitment_Id"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>